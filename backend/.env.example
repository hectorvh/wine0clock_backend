# ──────────────────────────────────────────────────────────────────────────────
# Wine Label Recognition API – environment variable template
#
# Copy this file to .env and fill in your real values.
# NEVER commit a populated .env file to version control.
# ──────────────────────────────────────────────────────────────────────────────

# ── Required: RapidAPI credentials ───────────────────────────────────────────
# Obtain from https://rapidapi.com/api4ai-api4ai-default/api/wine-recognition2
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=wine-recognition2.p.rapidapi.com

# ── Optional: CORS ────────────────────────────────────────────────────────────
# Comma-separated list of allowed frontend origins.
# Use "*" to allow any origin (not recommended in production).
FRONTEND_ORIGIN=http://localhost:3000

# ── Optional: HTTP client tunables ───────────────────────────────────────────
HTTP_TIMEOUT_SECONDS=10.0
HTTP_MAX_RETRIES=1

# ── Optional: File upload limits ─────────────────────────────────────────────
MAX_FILE_SIZE_BYTES=10485760   # 10 MB

# ── Optional: Response defaults ───────────────────────────────────────────────
DEFAULT_TOP_K=5
MAX_TOP_K=10
